<h1>My tasks:</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <%if task.completed? %>
  <input type="checkbox" check="checked">
  <% else %>
  <input type="checkbox">
  <%end%>
  <p><%= task.details %></p>
<% end %>





<%= link_to "New task", new_task_path %>
