<form action="/edit" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="task">Task:</label>
  <input type="text" name="task[title]" id="title" value="">

  <label for="details">Details:</label>
  <input type="text" name="task[details]" id="details" value="">

  <%if @task.completed%>
  <label for="completed"></label>
  <input type="boolean" name="task[completed]" id="completed" value="">
  <%end%>

  <input type="submit">
</form>
